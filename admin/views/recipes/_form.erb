<% error = @recipe.errors.include?(:post_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
<% error = @recipe.errors.include?(:ingredients) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :ingredients, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_area :ingredients, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:ingredients) : "Ex: a simple text" %></span>
  </div>
</fieldset>
    <%= f.hidden_field :post_id, value: @id %>
<% error = @recipe.errors.include?(:image) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.file_field :image, :class => 'control-label' %>
  <div class='controls'>
    <span class='help-inline'><%= error ? f.error_message_on(:image) : "Ex: a simple text" %></span>
  </div>
</fieldset>
<% error = @recipe.errors.include?(:title) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :title, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :title, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:title) : "Ex: a simple text" %></span>
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:recipes, :index), :class => 'btn btn-default' %>
</div>
