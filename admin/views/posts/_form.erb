<% error = @post.errors.include?(:title) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :title, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :title, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:title) : "Ex: a simple text" %></span>
  </div>
</fieldset>
<% error = @post.errors.include?(:body) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :body, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_area :body, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:body) : "Ex: a simple text" %></span>
  </div>
</fieldset>
<% error = @post.errors.include?(:category) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :category, :class => 'control-label' %>
  <div class='controls'>
    <%= f.select :category, options:['food','travel','adventure','spirit','cycling'], :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:category) : "Ex: a simple text" %></span>
  </div>
</fieldset>
<% error = @post.errors.include?(:image) %>

<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :image, :class => 'control-label' %>
  <div class='controls'>
    <%= f.file_field :image %>
    <span class='help-inline'><%= error ? f.error_message_on(:image) : "Ex: a simple text" %></span>
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:posts, :index), :class => 'btn btn-default' %>
</div>
