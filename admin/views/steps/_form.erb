<% error = @step.errors.include?(:step) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :step, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_area :step, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:step) : "Ex: a simple text" %></span>
  </div>
</fieldset>
<% error = @step.errors.include?(:image) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :image, :class => 'control-label' %>
  <div class='controls'>
    <%= f.file_field :image, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:image) : "Ex: a simple text" %></span>
  </div>
</fieldset>
<% error = @step.errors.include?(:title) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :title, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :title, :class => 'form-control input-xlarge input-with-feedback' %>
    <%= f.hidden_field :recipe_id, value: @id%>
    <span class='help-inline'><%= error ? f.error_message_on(:title) : "Ex: a simple text" %></span>
  </div>
</fieldset>

<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:steps, :index), :class => 'btn btn-default' %>
</div>
