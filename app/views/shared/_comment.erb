<%# _comment.erb  %>
<%#comments partial for bases/index  %>
<%=partial 'comments/comment_header', object:comment%>
<%#above in the header file for this partial  %>
<%#sytling in mobile and in application %>
<p>
    <% comment.comments.reverse.each do |c| %>
      <%= gravatar_for(c.user, { size:30 }) %>
      <span class="time-ago-now">
        <%= time_ago_in_words(c.created_at)%> ago
    </span>
      

    <%=word_wrap("#{c.comment}",  :line_width => 6 ) %>
</p>
  <%end%>
