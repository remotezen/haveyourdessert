  <body>
  <%#mast head image  %>
  <% if false %>
    style sheet is app/stylesheets/application
  <% end %>
<%# this is the main window root is bases/index  %>
<% if false %>
  app/stylesheet/bases
<% end %>

<div class="row">
    <div class="small-12 small-centered">
      <div class="main-wrapper center">
          <%= yield %>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 footer-menu small-centered">
    <div class="footer-wrapper center">
        <%=partial 'layouts/footer' %>
</div>
</div>
</div>
  </body>
</html>
